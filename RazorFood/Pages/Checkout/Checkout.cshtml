@page
@model RazorFood.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order!</h1>
@{
    var imagePath = "~/images/" + (@Model.ImageTitle + ".jpg"); 
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-append-version="true"/>
        <p>Your order for the @Model.FoodName  food is ready!</p>
        <p>Total Price for your order is : @Model.FoodPrice FCFA </p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm your Order</a>
    </div>
</div>